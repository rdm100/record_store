<div class="form_artist_new">
<form action="/album/new" method="POST">
  <label for="title">Title: </label>
<input type="text" id="title" name="title">

<label for="album_art">Album art url: </label>
<input type="text" id="album_art" name="album_art">

<label for="in_stock">Quantity in stock: </label>
<input type="number" id="in_stock" name="in_stock" min="1" max="100">

<label for="genre">Genre: </label>
<input type="text" name="genre" id="genre">

<label for="artist">Artist: </label>
<select name="artist_id" id="artist">
  <% @artists.each do |artist| %>
  <option value="<%=artist.id%>"><%=artist.name%></option>
  <% end %>
</select>

<input type="submit" value="Add New Album">

</form>
</div>